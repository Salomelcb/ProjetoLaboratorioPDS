<Page x:Class="GestaoAvaliacoes.Views.TarefasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestaoAvaliacoes.Views"
      xmlns:vm="clr-namespace:GestaoAvaliacoes.ViewModels"
      xmlns:converters="clr-namespace:GestaoAvaliacoes.Converters;assembly=GestaoAvaliacoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TarefasPage" Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Width="700"
                Height="405"
                CornerRadius="8"
                Padding="40"
                BorderBrush="#DCE1DA"
                BorderThickness="1"
                Margin="0,20,0,24">
            <Border.Effect>
                <DropShadowEffect Color="#999999"
                                  Direction="270"
                                  ShadowDepth="4"
                                  BlurRadius="10"
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="0,-10,0,-35">
                <!-- Título -->
                <TextBlock Text="Lista de Tarefas" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20" 
                           Foreground="{DynamicResource Titulos}" 
                           HorizontalAlignment="Center"/>

                <!-- Pesquisa e Botão -->
                <DockPanel Margin="0,0,0,20" LastChildFill="False" HorizontalAlignment="Center">
                    <Border BorderBrush="{DynamicResource SecundaryColor}" BorderThickness="1" CornerRadius="5" Padding="8" Width="240" Height="36" VerticalAlignment="Center" DockPanel.Dock="Left">
                        <Grid>
                            <TextBlock x:Name="PlaceholderTextTarefa" Foreground="Gray" Margin="24,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                            <DockPanel>
                                <Path Data="{StaticResource Pesquisa}" Width="16" Height="16" Fill="Gray" Margin="0,0,8,0" Stretch="Fill" VerticalAlignment="Center"/>
                                <TextBox x:Name="SearchBoxTarefa" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" FontSize="14" TextChanged="SearchBoxTarefa_TextChanged"/>
                            </DockPanel>
                        </Grid>
                    </Border>
                </DockPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="dgTarefas"
                          CanUserSortColumns="False"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="1"
                          BorderBrush="#DCE1DA"
                          Background="Transparent"
                          RowBackground="White"
                          AlternatingRowBackground="#FFF9F9F9"
                          IsReadOnly="True"
                          FontSize="14"
                          MaxHeight="150"
                          Loaded="dgTarefas_Loaded">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" FontSize="14"/>
                        <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="1.5*" FontSize="14"/>
                        <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="3*" FontSize="14"/>
                        <DataGridTextColumn Header="Início" Binding="{Binding DataInicio, StringFormat='{}{0:dd/MM/yyyy}'}" Width="1.5*" FontSize="14"/>
                        <DataGridTextColumn Header="Fim" Binding="{Binding DataFim, StringFormat='{}{0:dd/MM/yyyy}'}" Width="1.5*" FontSize="14"/>
                        <DataGridTextColumn Header="Peso (%)" Binding="{Binding Peso}" Width="Auto" FontSize="14"/>
                        <DataGridTemplateColumn Header="Ações" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Editar" Style="{StaticResource BotoesVerdes}"
                                                Padding="6,2" Margin="0,0,6,0" FontWeight="Bold"
                                                Click="EditTarefa_Click"/>
                                        <Button Width="30" Height="30" Background="#E57373" ToolTip="Eliminar"
                                                Click="EliminarTarefa_Click">
                                            <Path Data="{StaticResource Eliminar}" Fill="White" Stretch="Uniform"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botão Adicionar -->
                <Button Content="Adicionar Tarefa" Margin="0,20,0,0" Width="175" Height="35"
                        HorizontalAlignment="Center" Style="{StaticResource BotoesVerdes}"
                        FontWeight="Bold" Click="AddTarefa_Click"/>

                <TextBlock x:Name="txtAvisoTarefa" Text="" 
                           Foreground="#4F1716" 
                           FontWeight="SemiBold"
                           FontSize="12" 
                           Margin="0,15,0,0" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap" Width="450" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>