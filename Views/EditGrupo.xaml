<Window x:Class="GestaoAvaliacoes.Views.EditGrupo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoAvaliacoes.Views"
        mc:Ignorable="d"
        Title="Editar Grupo" Height="300" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" BorderBrush="{DynamicResource TertiaryColor}" BorderThickness="2">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/gradientsoft.png" Stretch="UniformToFill"/>
        </Border.Background>

        <Grid Margin="40,25,40,11">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ID -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="ID:" FontWeight="Bold" 
                       Foreground="{DynamicResource QuinaryColor}" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtID" Margin="0,5,0,0" Width="250"
                     TextAlignment="Center" VerticalContentAlignment="Center"
                     Text="{Binding GrupoID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Nome do Grupo -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Nome do Grupo:" FontWeight="Bold" 
                       Foreground="{DynamicResource QuinaryColor}" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtNome" Margin="0,5,0,0" Width="250"
                     TextAlignment="Center" VerticalContentAlignment="Center"
                     Text="{Binding GrupoNome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Lista de Alunos -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Lista de Alunos:" FontWeight="Bold" 
                       Foreground="{DynamicResource QuinaryColor}" HorizontalAlignment="Center"/>

                <DockPanel Margin="0,5,0,0">
                    <Border BorderBrush="{DynamicResource TertiaryColor}" BorderThickness="1" CornerRadius="5">
                        <ListBox x:Name="lstAlunosDoGrupo"
                     ItemsSource="{Binding AlunosNoGrupo}" Height="60" Width="200"
                     VerticalContentAlignment="Top"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Background="White"
                     SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Nome}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="2,0,0,0"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>

                    <Button Content="Editar" Width="57" Height="33" Margin="5,0,0,0" Click="EditarAlunos_Click"
                Style="{StaticResource BotoesVerdes}"/>
                </DockPanel>
            </StackPanel>

            <!-- Erro -->
            <TextBlock x:Name="txtErro" Grid.Row="3" Foreground="Red" FontSize="9" Margin="0,4,0,10"/>

            <!-- Botões -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" Width="100" Margin="0,0,10,0" Click="Cancelar_Click"
                        Style="{StaticResource BotoesVerdes}" FontWeight="SemiBold"/>
                <Button Content="Confirmar" Width="100" Click="Confirmar_Click"
                        Style="{StaticResource BotoesVerdes}" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
