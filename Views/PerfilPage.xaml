<Page x:Class="GestaoAvaliacoes.Views.PerfilPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PerfilPage"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border HorizontalAlignment="Center"
                Background="White"
                Width="650"
                Height="450"
                CornerRadius="8"
                Padding="40"
                BorderBrush="#DCE1DA"
                BorderThickness="1"
                Margin="0,20,0,24">
            <Border.Effect>
                <DropShadowEffect Color="#999999"
                                  Direction="270"
                                  ShadowDepth="4"
                                  BlurRadius="10"
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Perfil de Utilizador" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#4C5C4C"
                           Margin="0,0,0,25"
                           HorizontalAlignment="Center"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Width="140" Height="140" CornerRadius="70" Background="#DCE1DA" ClipToBounds="True">
                        <Image Source="{Binding FotografiaPath, FallbackValue='/Assets/default_profile.png'}"
                        Stretch="UniformToFill"
                        Width="140" Height="140">
                            <Image.Clip>
                                <EllipseGeometry Center="70,70" RadiusX="70" RadiusY="70"/>
                            </Image.Clip>
                        </Image>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="25,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Nome(*):" Foreground="#5A6D5D" FontWeight="SemiBold" FontSize="14"/>
                        <Border BorderBrush="{DynamicResource SecundaryColor}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,15">
                            <TextBlock Text="{Binding Nome}" FontSize="18" Foreground="Black"/>
                        </Border>
                        <TextBlock Text="Email(*):" Foreground="#5A6D5D" FontWeight="SemiBold" FontSize="14"/>
                        <Border BorderBrush="{DynamicResource SecundaryColor}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,15">
                            <TextBlock Text="{Binding Email}" FontSize="18" Foreground="Black"/>
                        </Border>
                        <TextBlock Text="Número de telefone:" Foreground="#5A6D5D" FontWeight="SemiBold" FontSize="14"/>
                        <Border BorderBrush="{DynamicResource SecundaryColor}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,0">
                            <TextBlock Text="{Binding NumeroTelefone, TargetNullValue='Não definido'}"
                            FontSize="18" Foreground="Black"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,35,0,0" HorizontalAlignment="Center">
                    <Button Content="Editar Foto" Style="{StaticResource BotoesVerdes}"
                        FontWeight="SemiBold" Padding="20,10" Width="140" FontSize="14"
                        Margin="0,0,15,0" Click="EditarFoto_Click"/>
                    <Button Content="Editar Perfil" Style="{StaticResource BotoesVerdes}" 
                        FontWeight="SemiBold" Padding="20,10" Width="140" FontSize="14"
                        Click="EditarPerfil_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>