<Page x:Class="GestaoAvaliacoes.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GestaoAvaliacoes.Views"
      mc:Ignorable="d"
      Title="HomePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
            <!-- Logo Icon -->
            <Border Width="40" Height="40" Background="#77866B" CornerRadius="5" HorizontalAlignment="Center" Margin="0,0,0,6">
                <Viewbox Width="24" Height="24" Stretch="Uniform">
                    <Path Data="{StaticResource logoAvaliaEdu}"
                          Fill="White" Stretch="Fill"/>
                </Viewbox>
            </Border>

            <!-- AvaliaEdu -->
            <TextBlock Text="AvaliaEdu"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#77866B"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,4" />

            <!-- Slogan -->
            <TextBlock Text="Gerencie avaliações, turmas e toda a organização da sua escola"
               FontSize="12"
               FontStyle="Italic"
               Foreground="#77866B"
               TextAlignment="Center"
               HorizontalAlignment="Center"/>
            <TextBlock Text="de forma simples e intuitiva"
               FontSize="12"
               FontStyle="Italic"
               Foreground="#77866B"
               TextAlignment="Center"
               HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
