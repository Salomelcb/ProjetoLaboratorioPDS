<Window x:Class="GestaoAvaliacoes.Views.EditAluno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Aluno" Height="300" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" BorderBrush="{DynamicResource TertiaryColor}" BorderThickness="2">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/gradientsoft.png" Stretch="UniformToFill"/>
        </Border.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nome Completo -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Nome Completo:" FontWeight="Bold" 
                           Foreground="{DynamicResource QuinaryColor}" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtNome" Margin="0,5,0,0" Width="250"
                          TextAlignment="Center" VerticalContentAlignment="Center"/>

            </StackPanel>

            <!-- Email -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Email:" FontWeight="Bold" 
                           Foreground="{DynamicResource QuinaryColor}" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtEmail" Margin="0,5,0,0" Width="250" 
                         TextAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Número de Aluno -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Número do aluno:" FontWeight="Bold" 
                           Foreground="{DynamicResource QuinaryColor}" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtNumero" Margin="0,5,0,0" Width="250"
                         TextAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Mensagem de erro -->
            <TextBlock x:Name="txtErro" Grid.Row="3" Foreground="Red" FontSize="10" Margin="0,4,0,10"/>

            <!-- Botões -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" Width="100" Margin="0,0,10,0" Click="Cancelar_Click"
                        Style="{StaticResource BotoesVerdes}" FontWeight="SemiBold"/>
                <Button Content="Confirmar" Width="100" Margin="0,0,10,0" Click="ConfirmarAluno_Click"
                        Style="{StaticResource BotoesVerdes}" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
