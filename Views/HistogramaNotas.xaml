<Window x:Class="GestaoAvaliacoes.Views.HistogramaNotas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histograma das Notas Finais"
        Width="760" Height="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Fundo com sombra realista -->
    <Grid Background="Transparent">
        <Border Background="#FDFCFB"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#DCE1DA"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="700"
                Height="420"
                Margin="60,60,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#999999"
                                  Direction="270"
                                  ShadowDepth="4"
                                  BlurRadius="12"
                                  Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Botão -->
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="*"/>
                    <!-- Gráfico -->
                    <RowDefinition Height="Auto"/>
                    <!-- Legenda -->
                </Grid.RowDefinitions>

                <!-- Botão Fechar -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Right">
                    <Button x:Name="btnClose"
                        Style="{StaticResource IconButtonsStyle}"
                        Content="{DynamicResource close}"
                        Click="BtnClose_Click"
                        Tag="IsCloseButton"/>
                </StackPanel>

                <!-- Título -->
                <TextBlock Grid.Row="1"
                       Text="Histograma das Notas Finais"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource Titulos}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

                <!-- Gráfico -->
                <Grid Grid.Row="2" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>

                    <!-- Eixo lateral -->
                    <StackPanel Grid.RowSpan="4" Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,6,0">
                        <TextBlock Text="Nº de alunos"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#666"
                               RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </StackPanel>

                    <!-- Linhas -->
                    <Line Grid.Column="1" X1="0" X2="1000" Stroke="#DDD" StrokeThickness="0.5" Grid.Row="0"/>
                    <Line Grid.Column="1" X1="0" X2="1000" Stroke="#DDD" StrokeThickness="0.5" Grid.Row="1"/>
                    <Line Grid.Column="1" X1="0" X2="1000" Stroke="#DDD" StrokeThickness="0.5" Grid.Row="2"/>
                    <Line Grid.Column="1" X1="0" X2="1000" Stroke="#DDD" StrokeThickness="0.5" Grid.Row="3"/>

                    <!-- Barras -->
                    <ItemsControl Grid.Column="1" Grid.RowSpan="4" ItemsSource="{Binding Barras}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Bottom" Margin="8,0">
                                    <Rectangle Width="30"
                                               Height="{Binding Altura}"
                                               Fill="{Binding Cor}"
                                               RadiusX="3" RadiusY="3"
                                               VerticalAlignment="Bottom">
                                        <Rectangle.ToolTip>
                                            <ToolTip Style="{StaticResource HistogramaToolTipStyle}"
                                                     Content="{Binding Tooltip}"/>
                                        </Rectangle.ToolTip>
                                    </Rectangle>
                                    <TextBlock Text="{Binding NotaCentro}"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,0"
                                           FontSize="11"
                                           Foreground="#444"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Legenda -->
                <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,18,0">
                        <Rectangle Width="14" Height="14" Fill="#F4C7C3" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="  Nota baixa (0–6)" VerticalAlignment="Center"
                               FontSize="11" Foreground="#555"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,18,0">
                        <Rectangle Width="14" Height="14" Fill="#FFE49C" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="  Nota média (6–14)" VerticalAlignment="Center"
                               FontSize="11" Foreground="#555"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="14" Height="14" Fill="#BEEAD8" RadiusX="2" RadiusY="2"/>
                        <TextBlock Text="  Nota boa (14–20)" VerticalAlignment="Center"
                               FontSize="11" Foreground="#555"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
