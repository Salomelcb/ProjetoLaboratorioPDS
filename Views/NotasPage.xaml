<Page x:Class="GestaoAvaliacoes.Views.NotasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GestaoAvaliacoes.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="NotasPage" Background="Transparent">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>



    <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Width="700"
                Height="405"
                CornerRadius="8"
                Padding="40"
                BorderBrush="#DCE1DA"
                BorderThickness="1"
                Margin="0,20,0,24">
            <Border.Effect>
                <DropShadowEffect Color="#999999"
                                  Direction="270"
                                  ShadowDepth="4"
                                  BlurRadius="10"
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="0,-10,0,-35">
                <!-- Título -->
                <TextBlock Text="Grelha de Notas"
                           FontSize="26"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource Titulos}"
                           HorizontalAlignment="Center"/>

                <!-- DataGrid -->
                <DataGrid x:Name="dgNotas"
                          CanUserSortColumns="False"
                          Height="200"
                          Width="610"
                          AutoGenerateColumns="False"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          BorderThickness="1"
                          BorderBrush="#FFCCCCCC"
                          Background="Transparent"
                          RowBackground="White"
                          AlternatingRowBackground="#FFF9F9F9"
                          IsReadOnly="True"
                          FontSize="14"
                          FrozenColumnCount="1"
                          GridLinesVisibility="None">

                    <DataGrid.Columns>
                        <!-- Coluna Grupo -->
                        <DataGridTemplateColumn Header="Grupo">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Height="24" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding GrupoNome}"
                                                   Visibility="{Binding MostrarGrupo, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Padding="0"
                                                   TextTrimming="CharacterEllipsis"/>       
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <!-- Coluna Aluno -->
                        <DataGridTextColumn Header="Aluno" Binding="{Binding NomeAlunoCurto}" />

                        <!-- Coluna Avaliação Final -->
                        <DataGridTextColumn Header="Avaliação Final" Binding="{Binding MediaFinal, StringFormat=F1}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <!-- Coluna Ações -->
                        <DataGridTemplateColumn Header="Ações">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Editar"
                                            Style="{StaticResource BotoesVerdes}"
                                            FontWeight="Bold"
                                            Visibility="{Binding MostrarGrupo, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Click="EditarGrupo_Click"
                                            HorizontalAlignment="Center"
                                            Padding="6,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Ações Gerais -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Alunos sem Grupo"
                            Width="175"
                            Height="35"
                            Margin="0,0,10,0"
                            Style="{StaticResource BotoesVerdes}"
                            FontWeight="Bold"
                            Click="AbrirSemGrupo_Click"/>

                    <Button Content="Abrir Histograma"
                            Width="175"
                            Height="35"
                            Style="{StaticResource BotoesVerdes}"
                            FontWeight="Bold"
                            Click="AbrirHistograma_Click"/>
                </StackPanel>
                <TextBlock x:Name="txtAviso" Text="" 
                           Foreground="{DynamicResource Titulos}" 
                           FontWeight="SemiBold"
                           FontSize="12" 
                           Margin="0,10,0,0" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap" Width="450" TextAlignment="Center"/>    
            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>