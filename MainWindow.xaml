<Window x:Class="GestaoAvaliacoes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoAvaliacoes"
        xmlns:vm="clr-namespace:GestaoAvaliacoes.ViewModels"
        xmlns:ctls="clr-namespace:GestaoAvaliacoes.Controls" 
        mc:Ignorable="d" Name="Home"
        Title="MainWindow" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"  WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" FontFamily="Poppins">
        
    <Border CornerRadius="8">
        <Border.Background> <!-- Fundo c/Gradriente-->
            <ImageBrush ImageSource="/Assets/gradientef.png"
                    Stretch="UniformToFill"/>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Barra -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SideBarColor}"
                    CornerRadius="8 0 0 8">
                <Grid x:Name="GridNav" Width="60">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                   <!-- Logotipo + AvaliaEdu-->
                    <Grid Grid.Row="0">
                        <Border Margin="18 0 0 0"
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Left">
                            <Path Data="{StaticResource logoAvaliaEdu}"
                                  Fill="White"
                                  Width="36" Height="36"/>
                        </Border>

                        <Label Content="AvaliaEdu"
                               Foreground="{DynamicResource PrimaryColor}"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="60 10 0 0"/>
                    </Grid>

                    <!-- Butões Barra -->
                    <StackPanel Grid.Row="1" Margin="-1 40 0 20">
                        <Button x:Name="btnHome" Style="{DynamicResource PopupButtonStyle}" MouseEnter="btnHome_MouseEnter" MouseLeave="btnHome_MouseLeave" Click="btnHome_Click">
                            <ctls:MenuItem GroupName="MenuItem" IndicatorBrush="{DynamicResource TertiaryColor}" Icon="{DynamicResource Home}" IconWidth="16" Text="Home" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="btnGrupos" Style="{DynamicResource PopupButtonStyle}"  MouseEnter="btnGrupos_MouseEnter" MouseLeave="btnGrupos_MouseLeave" Click="btnGrupos_Click">
                            <ctls:MenuItem GroupName="MenuItem" IndicatorBrush="{DynamicResource TertiaryColor}" Icon="{DynamicResource Grupos}" IconWidth="16" Text="Grupos" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="btnAlunos" Style="{DynamicResource PopupButtonStyle}"  MouseEnter="btnAlunos_MouseEnter" MouseLeave="btnAlunos_MouseLeave" Click="btnAlunos_Click">
                            <ctls:MenuItem GroupName="MenuItem" IndicatorBrush="{DynamicResource TertiaryColor}" Icon="{DynamicResource Alunos}" IconWidth="16" Text="Alunos" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="btnTarefas" Style="{DynamicResource PopupButtonStyle}"  MouseEnter="btnTarefas_MouseEnter" MouseLeave="btnTarefas_MouseLeave" Click="btnTarefas_Click">
                            <ctls:MenuItem GroupName="MenuItem" IndicatorBrush="{DynamicResource TertiaryColor}" Icon="{DynamicResource Tarefas}" IconWidth="16" Text="Tarefas" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="btnNotas" Style="{DynamicResource PopupButtonStyle}"  MouseEnter="btnNotas_MouseEnter" MouseLeave="btnNotas_MouseLeave" Click="btnNotas_Click">
                            <ctls:MenuItem GroupName="MenuItem" IndicatorBrush="{DynamicResource TertiaryColor}" Icon="{DynamicResource Notas}" IconWidth="16" Text="Notas" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="btnPerfil" Style="{DynamicResource PopupButtonStyle}"  MouseEnter="btnPerfil_MouseEnter" MouseLeave="btnPerfil_MouseLeave" Click="btnPerfil_Click">
                            <ctls:MenuItem GroupName="MenuItem" IndicatorBrush="{DynamicResource TertiaryColor}" Icon="{DynamicResource Perfil}" IconWidth="16" Text="Perfil" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>

                    <Popup x:Name="Popup" AllowsTransparency="True" HorizontalOffset="0" VerticalOffset="10">
                        <ctls:UserPopup x:Name="Header" Foreground="{DynamicResource PrimaryColor}"/>
                    </Popup>

                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Hamburguer (barras) Menu -->
                <ToggleButton x:Name="Tg_Btn" Grid.Column="1" VerticalAlignment="Center" Style="{DynamicResource MenuButtonStyle}" HorizontalAlignment="Left" BorderThickness="0" Background="Transparent" Margin="10,15,0,15" Height="30" Width="30">
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard>
                                <Storyboard x:Name="HideStackPanel">
                                    <DoubleAnimation Storyboard.TargetName="GridNav" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="210" To="60" Duration="0:0:0.5">
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard x:Name="ShowStackPanel">
                                    <DoubleAnimation Storyboard.TargetName="GridNav" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="60" To="210" Duration="0:0:0.5">
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>
                
                <!-- Botões Canto Sup. Direito -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.RowSpan="2">
                    <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                    <Button x:Name="btnRestore" Margin="5,0" Click="btnRestore_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButtonsStyle}">
                                <Setter Property="Content" Value="{DynamicResource maximize}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}" Value="Maximized">
                                        <Setter Property="Content" Value="{DynamicResource restore}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
                </StackPanel>
                
                <!-- Navegação das páginas -->
                <Frame Grid.Row="1"
                           Name="NavigationFrame"
                           Margin="20"
                           NavigationUIVisibility="Hidden">
                </Frame>
                
            </Grid>
        </Grid>
    </Border>
</Window>